<h1>
  <strong><%= identifier.capitalize %></strong>
</h1>
<h3>Event Time Breakdown by Name</h3>
<h4> <%= eventname %> showed up <%= total_sum %> times. </h4>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Hour Period</th>
          <th>Events Frequency</th>
          <th>Event Name</th>
        </tr>
        <tbody>
          <% (0..23).each do |num| %>
            <tr>
              <% if num == 24 %>
                <% num = 00 %>
              <% else %>
                <td><%= num %>-<%= num + 1 %></td>
                <% if hours_and_frequency.keys.include?(sprintf('%02d', num)) %>
                  <td><%= hours_and_frequency[sprintf('%02d', num)] %></td>
                  <td><a href="/sources/<%= identifier %>/events"><%= eventname %></a></td>
                <% else %>
                  <td><%= 0 %></td>
                <% end %>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </thead>
    </table>
  </div>
</div>
